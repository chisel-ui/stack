---
import { getSafeGutter } from '@chisel-ui/core'
import './Stack.css'
import type { LayoutProps } from '@chisel-ui/core'

export interface StackProps extends LayoutProps {
    style?: string
}

const { gutter = '0px', theme = {}, as: Tag = 'div', style = '', ...props } = Astro.props as StackProps

const maybeGutter = getSafeGutter(theme, gutter)
---

<Tag data-chisel-stack style={`--gutter: ${maybeGutter};${style}`} {...props}>
    <slot />
</Tag>
